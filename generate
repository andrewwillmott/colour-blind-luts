#!/bin/bash

CBLUT=${CBLUT-./cblutgen}
OPS=${OPS-"-m 1 -isxXyY"}
OUT=${OUT-out}

mkdir -p $OUT
pushd $OUT

for c in protanope deuteranope tritanope; do
    cat << EOF > results-$c.md
Results for '$c'
-------

From left to right: original, Daltonised (Fidaner), corrected (Willmott),
simulated colour blindness, Daltonised + simulated, corrected + simulated.

EOF

done

for i in ../tests/*.*; do
    BASE=${i##*/}
    IMAGE=${BASE%.*}

    echo "=== processing " $IMAGE

    mkdir -p $IMAGE
    pushd $IMAGE

        ../../$CBLUT -f ../$i -p $OPS
        ../../$CBLUT -f ../$i -d $OPS
        ../../$CBLUT -f ../$i -t -rL $OPS

    popd

    echo "updating results-$c.md"

    for c in protanope deuteranope tritanope; do
        cat << EOF >> results-$c.md
$IMAGE
---

<img src="$IMAGE/${IMAGE}_identity.png" alt="Original" width="256"/>
<img src="$IMAGE/${IMAGE}_${c}_daltonise.png" alt="Daltonised" width="256"/>
<img src="$IMAGE/${IMAGE}_${c}_correct.png" alt="Corrected" width="256"/>
<img src="$IMAGE/${IMAGE}_${c}_simulate.png" alt="Simulated" width="256"/>
<img src="$IMAGE/${IMAGE}_${c}_simulate_daltonised.png" alt="Simulated Daltonised" width="256"/>
<img src="$IMAGE/${IMAGE}_${c}_simulate_corrected.png" alt="Simulated Corrected" width="256"/>

EOF

    done
done

popd
